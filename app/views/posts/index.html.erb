<h1>トップページ</h1>

<%= link_to '新規投稿', '/posts/new' %>

<% @posts.each do |post| %>
  <div class="post">
    <div class="post-date">
      投稿日時：<%= post.created_at %>
    </div>
    <div class="post-content">
      <%= post.content %>
    </div>
    <div class="post-stamp-image">
      <strong><%= link_to image_tag(post.stamp.image , width: '375'), "/posts/#{post.stamp_id}" %></strong>
    </div>
  </div>
<% end %>



